<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}&nbsp;{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        <link href="{{ asset('/html5/css/normalize.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('/html5/css/main.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('/parts/bootstrap/import.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('/css/html5.css') }}" rel="stylesheet" type="text/css" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
        <![endif]-->

        <div class="header-container">
            <header class="wrapper clearfix">
                <h1 class="title">{{ block('title') }}</h1>
                <nav>
                    <ul>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a href="{{ path('fos_user_profile_show') }}">{{ 'layout.profile'|trans({}, 'AppUserBundle') }}</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                        </li>
                        {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </header>
        </div>

        <div class="main-container">
            <div class="main wrapper clearfix">
                
                {{ block('main_content') }}
                
                {% if block('side_content') %}
                    <aside>
                        {{ block('side_content') }}
                    </aside>
                {% endif %}

            </div>
        </div>

        <div class="footer-container">
            <footer class="wrapper">
                {% block footer %}&nbsp;{% endblock %}
            </footer>
        </div>
        
        <script src="http://code.jquery.com/jquery-latest.pack.js"></script>
        <script src="{{ asset('/html5/js/vendor/modernizr-2.6.1-respond-1.1.0.min.js') }}"></script>
        <script src="{{ asset('/html5/js/main.js') }}"></script>

    </body>
</html>
